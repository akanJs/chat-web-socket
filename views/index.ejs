<!DOCTYPE html>
<html>

<head>
    <title>Chat test</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"></script>
</head>

<body>
    <div class="login" id="login">
        <input id="login_name" placeholder="Username">
        <input type="password" id="login_pass" placeholder="Password" value="regEx">
        <button type="button" id="loginBtn">Login</button>
    </div>

    <div id="after-login" style="display:none">
        <h1 id="me"></h1>
        <div id="search-groups">
            <input type="text" placeholder="search groups" id="groupName">
            <button type="button" id="searchBtn">Search</button>
        </div>
        <div id="search-group-result"></div>
        <div id="user-list" class="user-list"></div>
        <div id="group-list" class="group-list"></div>
        <p id="create-group">Create Group</p>
        <div id="video-grid"></div>
        <!-- Modal -->
        <div class="modal fade" id="incomingCallModal" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="callerName"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="callerImg"></div>
                    <div class="modal-footer">
                        <button type="button" id="declineCallBtn" class="btn btn-danger" data-dismiss="modal">Decline</button>
                        <button type="button" id="acceptCallBtn" class="btn btn-success">Accept</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.0.0/crypto-js.min.js"></script>
    <script src="/js/chat.js"></script>
</body>